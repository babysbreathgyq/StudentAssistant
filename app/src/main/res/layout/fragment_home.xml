<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日推荐"
            android:textSize="36sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/main_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_signIn_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/icon_sign_in"
                android:layout_marginEnd="40dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_toDoList_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ordered_list"
                android:layout_marginEnd="50dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_InOut_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/money"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日签到"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginEnd="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待办事项"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginEnd="70dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常收支"
                android:textSize="15sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_contact_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/contact"
                android:layout_marginEnd="40dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_diet_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/turntable"
                android:layout_marginEnd="50dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_schedule_main"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/schedule"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社交管理"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginEnd="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饮食管理"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginEnd="70dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日程安排"
                android:textSize="15sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>